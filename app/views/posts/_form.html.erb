<%= form_for @post do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :content %>
    <%= f.text_area :content %>
    <%= f.label :categories %>
    <br>
    Choose a category:
    <br>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
    <br>
    Create a new category:
    <br>
    <%= f.fields_for :categories, @post.categories.build do |category_fields| %>
        <%= category_fields.text_field :name %>
    <% end %>
    <br>
    <%= f.submit %>
<% end %>

